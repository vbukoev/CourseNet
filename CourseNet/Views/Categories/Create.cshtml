@model CategoryDetailsViewModel
@{
    ViewData["Title"] = "Създай категория";
}

<h2 class="text-center">@ViewData["Title"]</h2>
<hr />
<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post">
            <div class="form-group">
                <label asp-for="Name">Име</label>
                <input asp-for="Name" class="form-control" placeholder="Име на категория...">
                <span asp-validation-for="Name" class="small text-danger"></span>
            </div>

            <div class="text-center">
                <input class="btn btn-primary mt-3" type="submit" value="Запази" />
            </div>
        </form>
    </div>
</div>
