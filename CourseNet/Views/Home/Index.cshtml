@model IEnumerable<IndexViewModel>
@{
    ViewData["Title"] = "Добре дошли в CourseNet";

    var courses = Model.ToList();
}
@if (!Model.Any())
{
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-6">
                <h1>Добре дошли в CourseNet</h1>
                <p class="lead">Вашата платформа за курсове.</p>
                @if (User?.Identity?.IsAuthenticated ?? false)
                {
                    <a class="btn btn-primary" href="/Courses">Прегледай курсовете</a>
                }
                
            </div>
        </div>
    </div>
}

<div class="mb-5"></div>
<div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        @for (int i = 0; i < courses.Count(); i++)
        {
            var course = courses[i];
            <div class="carousel-item @(i == 0 ? "active" : string.Empty)">
                <img class="d-block w-100" style="height:500px"
                     src="@course.ImagePath" alt="@course.Title">
                <div class="carousel-caption d-none d-md-block">
                    <h5>
                        <a class="btn btn-primary" asp-controller="Courses" asp-
                           action="Details"
                           asp-route-id="@course.Id"> @course.Title</a>
                    </h5>
                </div>
            </div>
        }
    </div>
    <button class="carousel-control-prev" type="button" data-bs-
            target="#carouselExampleControls" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Предишен</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-
            target="#carouselExampleControls" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Следващ</span>
    </button>
</div>