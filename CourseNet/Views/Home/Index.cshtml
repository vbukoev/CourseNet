@model IEnumerable<IndexViewModel>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Course Management App</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 0;
            background-image: url('https://png.pngtree.com/background/20211217/original/pngtree-geometric-line-network-course-learning-abstract-background-picture-image_1595372.jpg');
            background-size: cover;
            background-position: center;
        }

        .navbar {
            background-color: #4285f4;
            padding: 15px 0;
            text-align: center;
        }

            .navbar a {
                color: #fff;
                text-decoration: none;
                padding: 15px;
                font-size: 16px;
                margin: 0 10px;
                border-radius: 5px;
                transition: background-color 0.3s ease;
            }

                .navbar a:hover {
                    background-color: #3367d6;
                }

        .content {
            background: rgba(255, 255, 255, 0.9);
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            padding: 40px;
            text-align: center;
            margin: 20vh auto;
            width: 60%;
        }

        h1 {
            color: #4285f4;
        }

        p {
            color: #333;
            font-size: 18px;
            line-height: 1.6;
        }

        .btn {
            display: inline-block;
            padding: 10px 20px;
            font-size: 18px;
            text-align: center;
            text-decoration: none;
            background-color: #4285f4;
            color: #fff;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

            .btn:hover {
                background-color: #3367d6;
            }

        footer {
            background-color: #fff;
            padding: 20px 0;
            text-align: center;
            position: absolute;
            bottom: 0;
            width: 100%;
        }
    </style>
</head>
<body>

    <div class="content">
        <h1>Добре дошли в CourseNET</h1>
        <p>Вашето универсално решение за безпроблемна организация и управление на курсове.</p>
        <p>Не се колебай да се присъединиш и да започнеш своето приключение при нас.</p>
        @if (User?.Identity?.IsAuthenticated ?? false)
        {
            <a class="btn btn-primary" href="/Courses">Прегледай курсовете</a>
        }
    </div>


<div class="row">
    <div class="col-12 text-center">
        <button class="btn btn-primary" id="statistics_btn">Покажи статистиките</button>
    </div>
</div>

<div class="mt-4 p-5 bg-light d-none" id="statistics_div">
    <div class="row">
        <h2 class="col-md-6 text-center" id="total_courses"></h2>
            <h2 class="col-md-6 text-center" id="total_enrollments"></h2>
    </div> 
</div>
</body>
</html>

@section Scripts {
    <script>
        document.getElementById('statistics_btn').addEventListener('click', function () {
            fetch('/api/statistics')
                .then(response => response.json())
                .then(data => {
                    document.getElementById('total_courses').textContent = `Общ брой курсове: ${data.totalCourses}`;
                    document.getElementById('total_enrollments').textContent = `Общ брой записвания: ${data.totalEnrollments}`;
                    document.getElementById('statistics_div').classList.remove('d-none');
                });
        });
    </script>
}
